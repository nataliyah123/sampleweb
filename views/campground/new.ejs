<%include ../partials/header%>
<div class="container" style=" margin:30px auto; text-align:center">
<h1>Add new campground!</h1>
    <div class="container">
        <div class ="row" style="width:30% ;margin:0 auto; ">
             <form action="/campground" method="POST"  > 
                <div class="form-group" >
                  <input class="form-control" type="text" placeholder="Name" name="name"></input>
                </div>
                <div class="form-group" >
                  <input class="form-control" type="number" placeholder="Price" name="price" min="0.01" step="0.01"></inpput>
                </div>
                <div class="form-group" >
                  <input class="form-control" type="url" placeholder="url" name="url"></inpput>
                </div> 
                <div class="form-group" >
                <input class="form-control" type="textarea" placeholder="content" name="description"></inpput>
                </div>
                <div class="form-group" >
                  <button class ="btn btn-primary btn-lg btn-block"type="submit">Submit</button>
                </div>  
                   
                </div>
             </form>   
        </div>
    </div>    
</div>